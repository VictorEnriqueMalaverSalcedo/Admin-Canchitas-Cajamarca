            <!-- Workaround for one sided border -->
            <StackLayout row="1" cssClass="action-bar-border" height="1"></StackLayout>
        </GridLayout>

        <StackLayout row="1">
            <ScrollView>

                <StackLayout row="1">


                    <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="dimensionesField">


                        <Label text="Dimensiones" cssClass="label" col="1" row="0" />


                        <TextField col="1" row="1" text="{{ dimensiones }}" />

                        <!-- dimensiones content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="descripcionField">


                        <Label text="Descripcion" cssClass="label" col="1" row="0" />


                        <TextField col="1" row="1" text="{{ descripcion }}" />

                        <!-- descripcion content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="costoDiaField">


                        <Label text="Costo dÃ­a" cssClass="label" col="1" row="0" />


                        <TextField col="1" row="1" text="{{ costoDia }}" />

                        <!-- costoDia content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="costonocheField">


                        <Label text="Costo noche" cssClass="label" col="1" row="0" />


                        <TextField col="1" row="1" text="{{ costonoche }}" />

                        <!-- costonoche content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="horainicioField">


                        <Label text="Hora inicio" cssClass="label" col="1" row="0" />


                        <TextField col="1" row="1" text="{{ horainicio }}" />

                        <!-- horainicio content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="horafinField">


                        <Label text="Hora fin" cssClass="label" col="1" row="0" />


                        <TextField col="1" row="1" text="{{ horafin }}" />

                        <!-- horafin content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                    <!-- editableListForm14 additional fields -->


                </StackLayout>
                <!-- additional view content -->

            </ScrollView>
        </StackLayout>

    </GridLayout>
</Page>