<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo" id="grassesModelDetailsScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <ScrollView>
        <StackLayout>

            <GridLayout rows="auto, *">
                <GridLayout rows="auto" columns="*, *">

                    <widgets:button text="Edit" tap="onEditItemTap" />


                </GridLayout>
                <StackLayout row="1">


                    <Label text="{{ estado }}" />


                    <TextView text="{{ descripcion }}" />

                    <!-- additional view content -->
                </StackLayout>
            </GridLayout>

        </StackLayout>
    </ScrollView>
</Page>